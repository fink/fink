CompileScript: <<
#!/bin/sh -ev
  cd bfd
  ./configure %c
  make bfdver.h
  make targmatch.h
  make libbfd.la
  cd ../libiberty
  ./configure %c
  make libiberty.a
  cd ../opcodes
  ./configure %c
  make libopcodes.la
  cd ../binutils
  ./configure %c
  make objcopy
  make objdump
  make readelf
<<
InstallScript: <<
  mkdir -p %i/bin
  cp binutils/objcopy %i/bin
  cp binutils/objdump %i/bin
  cp binutils/readelf %i/bin
<<
