PatchScript: <<
#!/bin/sh -ex
	# apply upstream patchsets
	for p in patches/*.patch.gz; do
		gzip -cd $p | patch -p1
	done

	#Need to remove these entries to avoid failure on case sensitive file systems
	perl -pi -e "s/hp70092a\|//; s/hp2621a\|//; s/2621a\|//" misc/terminfo.src
<<
